<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.base.setup
        </field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="0" />
        <field name="inherit_id" ref="account.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//block[@id='invoicing_settings']" position="after">
                <h2>BlueMax Pay</h2>
                <div class="row mt16 o_settings_container" id="bluemaxpay_card_present_payment">
                    <div class="col-12 col-lg-6 o_setting_box" id="website_bluemaxpay_payment">
                        <div class="o_setting_right_pane">
                            <label string="Port " for="port" />
                            <div class="text-muted">
                                Port Number.
                            </div>
                            <div class="content-group">
                                <div class="mt16">
                                    <field name="port" class="o_light_label" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box" id="website_bluemaxpay_payment">
                        <div class="o_setting_right_pane">
                            <label string="Ip " for="ip_address" />
                            <div class="text-muted">
                                Ip Address of device.
                            </div>
                            <div class="content-group">
                                <div class="mt16">
                                    <field name="ip_address" class="o_light_label" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box" id="website_bluemaxpay_payment">
                        <div class="o_setting_right_pane">
                            <label string="Time Out " for="time_out" />
                            <div class="text-muted">
                                Port Number.
                            </div>
                            <div class="content-group">
                                <div class="mt16">
                                    <field name="time_out" class="o_light_label" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box" id="website_bluemaxpay_payment">
                        <div class="o_setting_right_pane">
                            <label string="Version No. " for="version_num" />
                            <div class="text-muted">
                                Device Version Number.
                            </div>
                            <div class="content-group">
                                <div class="mt16">
                                    <field name="version_num" class="o_light_label" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>