<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record model="res.groups" id="group_moderator">
            <field name="name">Moderator</field>
            <field name="category_id" ref="base.module_category_usability"/>
            <field name="users" eval="[Command.link(ref('base.user_root')), Command.link(ref('base.user_admin'))]"/>
        </record>
        <record id="base.group_system" model="res.groups">
            <field name="implied_ids" eval="[(4, ref('bluemax_forum.group_moderator'))]"/>
        </record>
        <record id="base.group_erp_manager" model="res.groups">
            <field name="implied_ids" eval="[(4, ref('bluemax_forum.group_moderator'))]"/>
        </record>
        <record id="menu_website_discussion_forums" model="website.menu">
            <field name="name">Forum</field>
            <field name="url">/discussion/forum</field>
            <field name="parent_id" ref="website.main_menu"/>
            <field name="sequence" type="int">35</field>
        </record>
        <record id="mt_answer_new" model="mail.message.subtype">
            <field name="name">Post Reply</field>
            <field name="res_model">discussion.forum.post</field>
            <field name="default" eval="True"/>
            <field name="hidden" eval="False"/>
            <field name="description">New Post Reply</field>
        </record>
        <record id="mt_answer_edit" model="mail.message.subtype">
            <field name="name">Reply Post Edited</field>
            <field name="res_model">discussion.forum.post</field>
            <field name="default" eval="False"/>
            <field name="description">Reply Post Edited</field>
        </record>
        <!-- Questions subtypes -->
        <record id="mt_question_new" model="mail.message.subtype">
            <field name="name">New Post</field>
            <field name="res_model">discussion.forum.post</field>
            <field name="default" eval="True"/>
            <field name="description">New Post</field>
        </record>
        <record id="mt_question_edit" model="mail.message.subtype">
            <field name="name">Post Edited</field>
            <field name="res_model">discussion.forum.post</field>
            <field name="default" eval="False"/>
            <field name="description">Post Edited</field>
        </record>
        <!-- Forum subtypes, to follow all answers or questions -->
        <record id="mt_forum_answer_new" model="mail.message.subtype">
            <field name="name">Post Reply</field>
            <field name="res_model">discussion.forum</field>
            <field name="default" eval="True"/>
            <field name="hidden" eval="False"/>
            <field name="parent_id" ref="mt_answer_new"/>
            <field name="relation_field">forum_id</field>
        </record>
        <record id="mt_forum_question_new" model="mail.message.subtype">
            <field name="name">New Post</field>
            <field name="res_model">discussion.forum</field>
            <field name="default" eval="True"/>
            <field name="hidden" eval="False"/>
            <field name="parent_id" ref="mt_question_new"/>
            <field name="relation_field">forum_id</field>
        </record>
    </data>
</odoo>