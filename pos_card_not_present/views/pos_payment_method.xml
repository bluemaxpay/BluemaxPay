<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="pos_payment_method_view_form_inherit" model="ir.ui.view">
        <field name="name">pos.payment.method.form.inherit</field>
        <field name="model">pos.payment.method</field>
        <field name="inherit_id" ref="point_of_sale.pos_payment_method_view_form" />
        <field name="arch" type="xml">
            <field name="journal_id" position="after">
                <field name='enable_card_details' />
            </field>
            <xpath expr="//field[@name='use_payment_terminal']" position="after">
                <field name="public_api_key" attrs="{'invisible':
                    [('use_payment_terminal', '!=', 'card_not_present')],
                    'required': [('use_payment_terminal', '=',
                    'card_not_present')]}" />
                <field name="secret_api_key" attrs="{'invisible':
                    [('use_payment_terminal', '!=', 'card_not_present')],
                    'required': [('use_payment_terminal', '=',
                    'card_not_present')]}" />
                <field name="developer_id" attrs="{'invisible':
                    [('use_payment_terminal', '!=', 'card_not_present')],
                    'required': [('use_payment_terminal', '=',
                    'card_not_present')]}" />
                <field name="version_number" attrs="{'invisible':
                    [('use_payment_terminal', '!=', 'card_not_present')],
                    'required': [('use_payment_terminal', '=',
                    'card_not_present')]}" />
                <field name="state" attrs="{'invisible':
                    [('use_payment_terminal', '!=', 'card_not_present')],
                    'required': [('use_payment_terminal', '=',
                    'card_not_present')]}" />
            </xpath>
        </field>
    </record>
</odoo>