<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_pos_payment_form" model="ir.ui.view">
        <field name="name">pos.payment.form.bluemax</field>
        <field name="model">pos.payment</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_payment_form" />
        <field name="arch" type="xml">
            <xpath expr="//group" position="before">
                <div class="oe_button_box" name="button_box">
                    <field name="pos_payment_terminal" invisible="1" />
                    <button class="oe_stat_button" string="Transactions" name="action_open_bluemax_txns" type="object" icon="fa-dollar" attrs="{'invisible': [('pos_payment_terminal', '!=', 'bluemax')]}">
                    </button>
                </div>
            </xpath>
        </field>
    </record>
    <record id="bluemax_pos_payment_tree" model="ir.ui.view">
        <field name="name">bluemax.pos.payment.tree</field>
        <field name="model">bluemax.pos.payment</field>
        <field name="arch" type="xml">
            <tree>
                <field name="order_id" />
                <field name="amount" widget='monetary' />
                <field name="currency_id" invisible="1" />
                <field name="transactionId" />
                <field name="entrymode" />
                <field name="deviceResponseCode" />
                <field name="card_type" />
                <field name="approvalcode" />
                <field name="maskedCardNumber" />
                <field name="state" />
            </tree>
        </field>
    </record>
    <record id="pos_payment_method_view_form_inherit2" model="ir.ui.view">
        <field name="name">pos.payment.method.form.inherit2</field>
        <field name="model">pos.payment.method</field>
        <field name="inherit_id" ref="point_of_sale.pos_payment_method_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='use_payment_terminal']" position="after">
                <field name="public_api_key" attrs="{'invisible':
                    [('use_payment_terminal', '!=', 'savedcards')],
                    'required': [('use_payment_terminal', '=',
                    'card_not_present')]}" />
                <field name="secret_api_key" attrs="{'invisible':
                    [('use_payment_terminal', '!=', 'savedcards')],
                    'required': [('use_payment_terminal', '=',
                    'card_not_present')]}" />
                <field name="developer_id" attrs="{'invisible':
                    [('use_payment_terminal', '!=', 'savedcards')],
                    'required': [('use_payment_terminal', '=',
                    'card_not_present')]}" />
                <field name="version_number" attrs="{'invisible':
                    [('use_payment_terminal', '!=', 'savedcards')],
                    'required': [('use_payment_terminal', '=',
                    'card_not_present')]}" />
                <field name="state" attrs="{'invisible':
                    [('use_payment_terminal', '!=', 'savedcards')],
                    'required': [('use_payment_terminal', '=',
                    'card_not_present')]}" />
            </xpath>
        </field>
    </record>
</odoo>