<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_sale_order_payment_form" model="ir.ui.view">
            <field name="name">Payment</field>
            <field name="model">sale.order.payment</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group attrs="{'invisible':[('is_bluemaxpay_card_sale','!=',False)]}">
                                <field name="partner_id" />
                                <field name="is_card" />
                                <field name="card_id" attrs="{'invisible':[('is_card','=',True)]}" />
                                <field name="save_card" attrs="{'invisible':[('is_card','!=',True)]}" />
                            </group>
                            <group attrs="{'invisible':[('is_bluemaxpay_card_sale','!=',False)]}">
                                <field name="payment_type" attrs="{'required': [('is_bluemaxpay_card_sale', '=', False)]}" />
                                <field name="amount" widget="monetary" />
                                <field name="sale_id" invisible="1" />
                            </group>
                            <group>
                                <field name="is_bluemaxpay_card_sale" class="is-bluemaxpay-card-present" />
                            </group>
                            <group />
                            <group attrs="{'invisible':[('is_bluemaxpay_card_sale','!=',True)]}">
                                <widget name="payment_process" string="Send Payment Request" highlight="1" class="payment_process" action="message_post" />
                            </group>
                        </group>
                        <group string="Card Details" attrs="{'invisible': [('is_card', '!=', True)]}">
                            <group>
                                <field name="card_type" widget="radio" options="{'horizontal': true}" />
                                <field name="card_number" attrs="{'required':[('is_card','=',True)]}" />
                                <field name="name" attrs="{'required':[('is_card','=',True)]}" />
                                <field name="card_cvv" attrs="{'required':[('is_card','=',True)]}" />
                            </group>
                            <group>
                                <field name="card_expiry_month" attrs="{'required':[('is_card','=',True)]}" />
                                <field name="card_expiry_year" attrs="{'required':[('is_card','=',True)]}" />
                                <field name="token_name" attrs="{'invisible': [('save_card', '!=', True)],'required':[('save_card', '=', True),('is_card','=',True)]}" />
                            </group>
                        </group>
                        <footer>
                            <button string="Payment" id="action_create_payment_sale" name="create_payment" type="object" class="btn-primary" data-hotkey="q" />
                            <button string="Cancel" class="btn-secondary" special="cancel" data-hotkey="z" />
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="sale_order_payment" model="ir.actions.act_window">
            <field name="name">Payment</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sale.order.payment</field>
            <field name="view_mode">form</field>
        </record>
    </data>
</odoo>