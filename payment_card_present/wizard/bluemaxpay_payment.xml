<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="view_sale_order_payment_forms" model="ir.ui.view">
            <field name="name">Payment</field>
            <field name="model">bluemaxpay.payment</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="payment_id" invisible="0" />
                                <field name="is_bluemaxpay_card_sale" invisible="1" />
                                <field name="is_bluemaxpay_card_sale_present" invisible="1" />
                                <field name="is_card" attrs="{'invisible':[('is_bluemaxpay_card_sale','=',False)]}" />
                                <field name="card_id" invisible="0" />
                                <field name="save_card" invisible="1" />
                            </group>
                            <group>
                                <field name="amount" widget="monetary" />
                            </group>
                            <group attrs="{'invisible':[('is_bluemaxpay_card_sale_present','=',False)]}">
                                <button class="btn btn-link" id="bluemaxpay-card-present" t-on-click="_onClickBlueMaxPayCardPresentInvoice">
                                    <a>Send Payment Request</a>
                                </button>
                            </group>
                        </group>
                        <group string="Card Details" attrs="{'invisible': [('is_card', '!=', True)]}">
                            <group>
                                <field name="card_type" widget="radio" options="{'horizontal': true}" />
                                <field name="card_name" attrs="{'required':[('is_card','=',True)]}" />
                                <field name="card_number" attrs="{'required':[('is_card','=',True)]}" />
                                <field name="card_cvv" attrs="{'required':[('is_card','=',True)]}" />
                            </group>
                            <group>
                                <field name="card_expiry_month" attrs="{'required':[('is_card','=',True)]}" />
                                <field name="card_expiry_year" attrs="{'required':[('is_card','=',True)]}" />
                                <field name="token_name" attrs="{'invisible': [('save_card', '!=', True)],'required':[('save_card', '=', True),('is_card','=',True)]}" />
                            </group>
                        </group>
                        <footer>
                            <button name="action_done" type="object" id="create-bluemaxpay-payment" string="Create Payment" class="oe_highlight" />
                            <button string="Cancel" class="btn-secondary" special="cancel" data-hotkey="z" />
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>